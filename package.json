{
  "name": "wordcamp-blocks",
  "description": "Blocks for WordCamp.org",
  "version": "1.0.0",
  "license": "GPL-2.0-or-later",
  "private": true,
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "@wordpress/babel-plugin-makepot": "^2.1.2",
    "@wordpress/babel-preset-default": "^3.0.1",
    "@wordpress/babel-plugin-import-jsx-pragma": "^1.1.2",
    "@wordpress/i18n": "^3.0.1",
    "@babel/core": "^7.0.0",
    "@babel/runtime-corejs2": "^7.0.0",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3"
  },
  "scripts": {
    "start": "cross-env BABEL_ENV=development NODE_ENV=development webpack --watch",
    "build": "cross-env BABEL_ENV=production NODE_ENV=production webpack && npm run makepot",
    "makepot": "wp i18n make-pot . localization/_syntaxhighlighter-template.po --merge=localization/blocks.pot --skip-js"
  },
  "babel": {
    "presets": [
      "@wordpress/babel-preset-default"
    ],
    "plugins": [
      [
        "@wordpress/babel-plugin-import-jsx-pragma",
        {
          "scopeVariable": "createElement",
          "source": "@wordpress/element",
          "isDefault": "false"
        }
      ]
    ],
    "env": {
      "production": {
        "plugins": [
          [
            "@wordpress/babel-plugin-makepot",
            {
              "output": "blocks.pot"
            }
          ]
        ]
      }
    }
  }
}
