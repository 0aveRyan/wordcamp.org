{
	"name": "wordcamp-blocks",
	"description": "Blocks for WordCamp.org",
	"version": "1.0.0",
	"license": "GPL-2.0-or-later",
	"private": true,
	"engines": {
		"node": ">=8.0.0",
		"npm": ">=6.0.0"
	},
	"dependencies": {
		"classnames": "^2.2.5"
	},
	"devDependencies": {
		"@babel/core": "^7.1.2",
		"@babel/runtime-corejs2": "^7.1.2",
		"@wordpress/babel-plugin-import-jsx-pragma": "^1.1.2",
		"@wordpress/babel-plugin-makepot": "^2.1.2",
		"@wordpress/babel-preset-default": "^3.0.1",
		"@wordpress/browserslist-config": "^2.2.2",
		"@wordpress/element": "^2.1.4",
		"@wordpress/i18n": "^3.0.1",
		"babel-eslint": "^10.0.1",
		"babel-loader": "^8.0.4",
		"cross-env": "^5.2.0",
		"eslint": "^5.7.0",
		"eslint-config-wordpress": "^2.0.0",
		"eslint-plugin-jsx-a11y": "^6.1.2",
		"eslint-plugin-react": "^7.11.1",
		"lodash": "^4.17.10",
		"webpack": "4.23.1",
		"webpack-cli": "3.1.1"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	],
	"eslintIgnore": [
		"*.min.js",
		"package*.json"
	],
	"scripts": {
		"watch": "cross-env BABEL_ENV=development NODE_ENV=development webpack --watch",
		"build": "cross-env BABEL_ENV=development NODE_ENV=development webpack && npm run php-l10n && rm blocks.pot && npm run lint",
		"lint": "eslint $(git diff master --name-only) $(git diff --cached --name-only) --ignore-pattern '!.eslintrc.js' --quiet",
		"php-l10n": "pot-to-php ./blocks.pot ./l10n.php wordcamporg"
	}
}
